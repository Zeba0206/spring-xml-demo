<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="actor" class="com.stackroute.stackroute.domain.Actor" scope="prototype">
        <constructor-arg index="0" value="Shahid Kapoor" type="String" />
        <constructor-arg index="1" value="Male" type="String"/>
        <constructor-arg index="2" value="40" type="int"/>
    </bean>



    <bean id="actor2" class="com.stackroute.stackroute.domain.Actor" scope="prototype">
        <constructor-arg index="0" value="Hritik Roshan" type="String" />
        <constructor-arg index="1" value="Male" type="String"/>
        <constructor-arg index="2" value="40" type="int" />
    </bean>

    <bean name="movie1" autowire="byName" class="com.stackroute.stackroute.domain.Movie">
        <constructor-arg index="0" ref="actor" />
    </bean>

    <bean id="movie2" autowire="byType" class="com.stackroute.stackroute.domain.Movie" scope="singleton">
        <constructor-arg index="0" ref="actor" />
    </bean>



</beans>
